# AI Recruitment Caller — Environment Variables
# Copy to .env and fill in your values

# ── VAPI Configuration ──────────────────────────────────────────
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id_here
VAPI_ASSISTANT_ID=                          # leave blank to auto-create
VAPI_BASE_URL=https://api.vapi.ai

# ── Webhook ─────────────────────────────────────────────────────
WEBHOOK_BASE_URL=https://your-domain.com    # public URL for VAPI webhooks
WEBHOOK_SECRET=change_me_to_a_strong_secret

# ── Calling Rules ───────────────────────────────────────────────
# UK calling windows (24h format, Europe/London timezone)
CALLING_WINDOW_START=09:00
CALLING_WINDOW_END=20:00
CALLING_TIMEZONE=Europe/London

# Throttling
MAX_CONCURRENT_CALLS=5
MAX_CALLS_PER_HOUR=50
MAX_CALLS_PER_DAY=200

# Retry policy
MAX_RETRIES=2
RETRY_DELAY_MINUTES=60

# ── Paths ───────────────────────────────────────────────────────
DATABASE_PATH=data/calls.db
INPUT_CSV_DIR=data/input
OUTPUT_CSV_DIR=data/output
LOG_DIR=data/logs
SUPPRESSION_LIST_PATH=data/suppression_list.csv

# ── Server ──────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8000
